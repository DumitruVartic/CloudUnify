@page "/"
@namespace CloudUnify.Maui.Components.Pages
@inject NavigationService NavigationService

<div class="welcome-container">
    <div class="welcome-content">
        <h1>Welcome to CloudUnify</h1>
        <p class="subtitle">Connect and manage your cloud storage in one place</p>

        <div class="storage-options">
            <div class="storage-card" @onclick="@(() => NavigationService.NavigateToAddStorageAsync())">
                <div class="storage-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3>Add New Storage</h3>
                <p>Connect your cloud storage provider</p>
            </div>

            <div class="storage-card" @onclick="@(() => NavigationService.NavigateToStoragesAsync())">
                <div class="storage-icon">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h3>View Storages</h3>
                <p>Manage your connected storages</p>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
        background-color: #f5f7fa;
    }

    .welcome-content {
        max-width: 800px;
        width: 100%;
        text-align: center;
    }

    h1 {
        font-size: 2.5rem;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.2rem;
        color: #718096;
        margin-bottom: 3rem;
    }

    .storage-options {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .storage-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .storage-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .storage-icon {
        font-size: 2.5rem;
        color: #4299e1;
        margin-bottom: 1rem;
    }

    .storage-card h3 {
        font-size: 1.5rem;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .storage-card p {
        color: #718096;
        margin: 0;
    }
</style> 